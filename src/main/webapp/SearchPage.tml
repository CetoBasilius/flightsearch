<html t:type="layout" title="Search flight travel deals"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <form t:type="form" t:id="searchForm" class="full-form" >
    <t:errors />
    		<table>
    			<tr>
    			    <th>
                        <label t:type="label" t:for="origin">Origin</label>
                    </th>
    				<td>
                        <t:textfield t:id="origin" t:mixins="autocomplete" size="50" t:validate="required,codeintextfield"/>

    				</td>

    				<td colspan="2"  width="40">&nbsp;</td>


                    <th>
                        <label t:type="label" t:for="destination">Destination</label>
                    </th>
                    <td>
                        <t:textfield t:id="destination" t:mixins="autocomplete" size="50" t:validate="required,codeintextfield"/>
                    </td>

                </tr>
                <tr>
    				<th>
                        <label t:type="label" t:for="startDate">Start date</label>
                    </th>
                    <td>
                        <t:datefield t:id="startDate" t:validate="required,aftertoday"/>
                        &nbsp;&nbsp;<label>Round Trip</label><t:checkbox t:id="roundTrip"/>
                    </td>

                    <td colspan="2"  width="40">&nbsp;</td>


                    <t:if test="roundFlightValue">
                        <th>
                            <label t:type="label" t:for="endDate">Return date</label>
                        </th>
                        <td>
                            <t:datefield t:id="endDate" t:validate="required,aftertoday"/>
                        </td>
                    </t:if>
    			</tr>

    			<tr>
    			    <th>
    			        <label>Budget</label>
    			    </th>
                    <td>
                        <t:slider value="slider" min="500" max="30000" id="slider"/>
                    </td>
    			</tr>
    			<tr>
                    <th>
                        <label t:type="label" t:for="adults">Adults</label>
                    </th>
                    <td>
                        <t:textfield t:id="adults" value="adults" size="1" t:validate="required,regexp=^[0-9]+$"/>
                    </td>
                </tr>
                <tr>
                    <th>
                        <label t:type="label" t:for="children">Children</label>
                    </th>
                    <td>
                        <t:textfield t:id="children" value="children" size="1" t:validate="required,regexp=^[0-9]+$"/>
                    </td>
                </tr>
    			<td height="10">&nbsp;</td>
    		</table>
    		<div class="form-submit">
    			<input type="submit" t:type="submit" value="Search" />

    		</div>
    	</form>
</html>