<html t:type="layout"
        title="Search flight travel deals"
        description="Find the best flight adjusting to your budget."
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">

    <form t:type="form" t:id="searchForm" class="full-form" >
    <t:errors />
        <table>
            <tr>
                <th>
                    <label t:type="label" t:for="origin">Origin</label>
                </th>
                <td>
                    <t:textfield t:id="origin" t:value="origin" t:mixins="autocomplete" size="50" t:validate="required,codeintextfield"/>
                </td>
                <td colspan="2"  width="40">&nbsp;</td>
            </tr>
            <tr>
                <th>
                    <label t:type="label" t:for="destination">Destination</label>
                </th>
                <td>
                    <t:textfield t:id="destination" t:mixins="autocomplete" size="50" t:validate="required,codeintextfield"/>
                </td>
            </tr>
            <tr>
                <th>
                    <label t:type="label" t:for="startDateTimeField">Start date&nbsp;</label>
                </th>
                <td>


                    <input t:id="startDateTimeField" t:value="startDate" t:validate="required,aftertomorrow"/>


                    &nbsp;&nbsp;
                    <t:if test="!showRoundTrip">
                        <t:actionlink t:id="clicker1" t:event="clicker">Set round trip</t:actionlink>
                        <p:else>
                            <t:actionlink t:id="clicker2" t:event="clicker">Set one way</t:actionlink>
                        </p:else>
                    </t:if>
                </td>
            </tr>
            <tr>
                <t:if test="showRoundTrip">
                    <th>
                        <label t:type="label" t:for="endDateTimeField">Return date</label>
                    </th>
                    <td>
                        <input t:id="endDateTimeField" t:value="endDate" t:validate="required,aftertomorrow"/>
                    </td>
                </t:if>
            </tr>
            <tr>
                <th>
                    <label>Budget</label>
                </th>
                <td>
                    <table>
                        <tr>
                            <td>
                                <t:slider value="slider" id="slider" t:min="500" t:max="15000" t:steps="100"/>
                            </td>
                        </tr>
                    </table>
                </td>
            </tr>
            <tr>
                <th>
                    <label t:type="label" t:for="adults">Adults</label>
                </th>
                <td>
                    <t:textfield t:id="adults" value="adults" size="1" t:validate="required,regexp=^[0-9]+$"/>
                </td>
            </tr>
            <tr>
                <th>
                    <label t:type="label" t:for="children">Children</label>
                </th>
                <td>
                    <t:textfield t:id="children" value="children" size="1" t:validate="required,regexp=^[0-9]+$"/>
                </td>
            </tr>
            <tr>
                <th>
                    <label t:type="label" t:for="infants">Infants</label>
                </th>
                <td>
                    <t:textfield t:id="infants" value="infants" size="1" t:validate="required,regexp=^[0-9]+$"/>
                </td>
            </tr>
            <tr height="5"/>
            <tr>
                <th>
                    <label t:type="label" t:for="direct">Direct flights only</label>
                </th>
                <td>
                    <t:checkbox t:id="direct" value="direct" t:validate="required"/>
                </td>
            </tr>
            <td height="10">&nbsp;</td>
        </table>
        <div class="form-submit">
            <input type="submit" t:type="submit" value="Search" t:id="search" t:event="search" />
        </div>
    </form>
</html>