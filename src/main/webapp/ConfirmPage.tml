<html t:type="layout" title="Confirm your booking"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
        >


    <table style="width:100%;">
        <tr>
            <td class="testtd" style="width:50%;" valign="top">
                <form t:type="form" t:id="confirmForm">
                    <table style="width:100%;">
                        <!-- Title -->
                        <tr>
                            <td class="testtd">


                            </td>
                        </tr>

                        <!-- Passengers area -->
                        <tr>
                            <td>
                                <label>Passengers</label>
                                <!-- Must loop and add every passenger -->
                                <t:loop source="passengers" value="passenger"
                                        encoder="passengerValueEncoder">

                                    <table style="width:100%;">
                                        <tr>
                                            <td rowspan="2" class="testtd" style="width:20%;">
                                                <!-- passenger title (adult,child,inf) -->
                                                ${passengerId}
                                            </td>
                                            <td class="testtd" style="width:40%;">
                                                <!-- name/s (as in passport) -->
                                            </td>
                                            <td class="testtd" style="width:40%;">
                                                <!-- last name (as in passport) -->
                                            </td>
                                        </tr>

                                        <tr>
                                            <td class="testtd">
                                                <!-- birth date -->
                                            </td>
                                            <td class="testtd">
                                                <!-- gender -->
                                            </td>
                                        </tr>

                                    </table>

                                </t:loop>
                            </td>
                        </tr>

                        <!-- Payment options -->
                        <tr>
                            <td class="testtd">
                                <label>Payment options</label>
                                <table style="width:100%;">
                                    <!-- loop payment options -->
                                    <tr>
                                        <td class="testtd">
                                            <!-- payment radio and label -->
                                        </td>
                                        <td class="testtd">
                                            <!-- payment icons and description -->
                                        </td>
                                    </tr>
                                </table>

                                <label>Card details</label>
                                <table style="width:100%;">
                                    <tr>
                                        <td class="testtd">
                                            <!-- Drop down card type -->
                                        </td>
                                        <td class="testtd">
                                            <!-- Card expire date -->

                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="testtd">
                                            <!-- Card number -->
                                        </td>
                                        <td class="testtd">
                                            <!-- security ocde -->
                                        </td>
                                    </tr>

                                    <tr>
                                        <td class="testtd">
                                            <!-- name of card owner -->
                                        </td>
                                    </tr>
                                </table>

                            </td>
                        </tr>

                        <!-- Contact information -->
                        <tr>
                            <td class="testtd">
                                <label>Contact informtion</label>
                                <table style="width:100%;">
                                    <tr>
                                        <td class="testtd">
                                            <!-- Email -->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="testtd">
                                            <!-- Confirm email -->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="testtd">
                                            <!-- Phone -->
                                        </td>
                                    </tr>
                                </table>

                            </td>
                        </tr>

                        <!-- Pay and agree terms -->
                        <tr>
                            <td class="testtd">
                                <label>Confirm purchase</label>
                                <table style="width:100%;">
                                    <tr>
                                        <td class="testtd">
                                            <!-- I agree checkbox -->
                                        </td>
                                    </tr>
                                    <tr>
                                        <td class="testtd">
                                            <!-- confirm purchase -->
                                            <input type="submit" t:type="submit" value="Confirm"
                                                   t:id="confirmPurchase" t:event="confirmPurchase"/>
                                        </td>
                                    </tr>
                                </table>
                            </td>
                        </tr>
                    </table>
                </form>
            </td>

            <td class="testtd" style="width:50%;" valign="top">
                <table style="width:100%;">
                    <tr>
                        <td class="testtd">
                            <!-- Price information -->
                        </td>
                    </tr>
                    <tr>
                        <td class="testtd">
                            <!-- Itinerary information -->
                        </td>
                    </tr>
                </table>

            </td>
        </tr>
    </table>


</html>