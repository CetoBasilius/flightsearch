<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
        >
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>${title}</title>
    </head>
    <body>
        <div id="non-printable">
            <!-- start header -->
            <div class="header">
                <div class="logo">
                    <h1>
                        <t:pagelink page="index">Flight Search</t:pagelink>
                        &nbsp;
                    </h1>
                </div>

                <div class="menu">
                    <ul>

                        <t:security.authenticated>
                            <li class="first">
                                Welcome, ${user?.fullName}
                            </li>
                        </t:security.authenticated>


                        <li t:type="loop" source="pageNames" value="pageName" class="prop:classForPageName">
                            <t:pagelink page="prop:pageName">${pageName}</t:pagelink>
                        </li>
                        <li>
                            <a href="#" t:type="actionlink" t:id="search" id="search">Search flights</a>
                        </li>

                        <t:security.authenticated>

                            <li>
                                <a href="#" t:type="actionlink" t:id="accountsettings" id="accountsettings">Settings</a>
                            </li>
                        </t:security.authenticated>

                        <li>
                            <a href="#" t:type="actionlink" t:id="about" id="about">About</a>
                        </li>

                        <t:security.authenticated>
                            <li class="last">
                                <a href="#" t:type="actionlink" t:mixins="confirm" t:message="Are you sure you want to log out?" t:id="logout" id="logout">Log out</a>
                            </li>
                        </t:security.authenticated>

                        <t:security.notauthenticated>
                            <li class="last">
                                <a href="#" t:type="actionlink" t:id="signIn" id="signIn">Sign in</a>
                            </li>
                        </t:security.notauthenticated>

                    </ul>
                </div>
            </div>
        </div>
        <!-- end header -->

        <!-- start page -->
        <div class="page">

            <!-- start content -->
            <div class="content">
                <div class="post">
                    <div id="non-printable">
                        <div class="title">
                            <h2>${title}</h2>
                            <label>${description}</label>
                            <br/>&nbsp;
                        </div>
                    </div>
                    <div class="entry">
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->

        <!-- start footer -->
        <div id="non-printable" >

            <div class="footer">
                <p class="legal">
                    &copy;2012 com.basilio. All Rights Reserved.
                    &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                    All trademarks and logos are the property of their respective owners.
                </p>
            </div>
        </div>
        <!-- end footer -->
    </body>
</html>
