<!DOCTYPE html>
    <html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:t="http://tapestry.apache.org/schema/tapestry_5_3.xsd"
      xmlns:p="tapestry:parameter">
    <head>
        <meta http-equiv="content-type" content="text/html; charset=utf-8"/>
        <title>${title}</title>
    </head>
    <body>
        <!-- start header -->
        <div class="header">
            <div class="logo">
                <h1>
                    <t:pagelink page="index">Flight Search</t:pagelink>
                    &nbsp;
                </h1>
            </div>

            <div class="menu">
                <ul>

                    <t:security.authenticated>
                        <li class="first">
                            Welcome, ${user?.fullName}
                        </li>
                    </t:security.authenticated>


                    <li t:type="loop" source="pageNames" value="pageName" class="prop:classForPageName">
                        <t:pagelink page="prop:pageName">${pageName}</t:pagelink>
                    </li>
                    <li>
                        <a href="#" t:type="actionlink" t:id="search" id="search">Search flights</a>
                    </li>

                    <t:security.authenticated>

                        <li>
                            <a href="#" t:type="actionlink" t:id="accountsettings" id="accountsettings">Settings</a>
                        </li>
                    </t:security.authenticated>

                    <li>
                        <a href="#" t:type="actionlink" t:id="about" id="about">About</a>
                    </li>

                    <t:security.authenticated>
                        <li class="last">
                            <a href="#" t:type="actionlink" t:mixins="confirm" t:message="Are you sure you want to log out?" t:id="logout" id="logout">Log out</a>
                        </li>
                    </t:security.authenticated>

                    <t:security.notauthenticated>
                        <li class="last">
                            <a href="#" t:type="actionlink" t:id="signIn" id="signIn">Sign in</a>
                        </li>
                    </t:security.notauthenticated>

                </ul>
            </div>
        </div>
        <!-- end header -->

        <!-- start page -->
        <div class="page">

            <!-- start content -->
            <div class="content">
                <div class="post">
                    <div class="title">
                        <h2>${title}</h2>
                        <label>${description}</label>
                        <br/>&nbsp;
                    </div>
                    <div class="entry">
                        <t:body/>
                    </div>
                </div>
            </div>
            <!-- end content -->
            <br style="clear: both;"/>
        </div>
        <!-- end page -->

        <!-- start footer -->
        <div class="footer">
            <p class="legal">
                &copy;2012 com.basilio. All Rights Reserved.
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Design by
                <a href="http://www.freecsstemplates.org/">Free CSS Templates</a>
                &nbsp;&nbsp;&bull;&nbsp;&nbsp;
                Icons by
                <a href="http://famfamfam.com/">FAMFAMFAM</a>.
            </p>
        </div>
        <!-- end footer -->
    </body>
</html>
